<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="#ff000000"
                    android:centerColor="#ff111111"
                    android:centerY="0.75"
                    android:endColor="#ff222222"
                    android:angle="270"
            />
        </shape>
    </item>
    
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                        android:startColor="#80333333"
                        android:centerColor="#80444444"
                        android:centerY="0.75"
                        android:endColor="#a0555555"
                        android:angle="270"
                />
            </shape>
        </clip>
    </item>
    
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                        android:startColor="#ff666666"
                        android:centerColor="#ff777777"
                        android:centerY="0.75"
                        android:endColor="#ff888888"
                        android:angle="270"
                />
            </shape>
        </clip>
    </item>

</layer-list>
