<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="doClick"
                android:text="排序" />

            <Button
                android:id="@+id/fir_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Picker(Normal/Dialog)" />

            <Button
                android:id="@+id/fir_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GridView" />

            <Button
                android:id="@+id/fir_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spinner" />

            <Button
                android:id="@+id/fir_button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ProgressBar" />
            
            <Button
                android:id="@+id/fir_button9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SeekBar" />

            <Button
                android:id="@+id/fir_button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WebView" />
            <Button
                android:id="@+id/fir_button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C/C++测试" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>