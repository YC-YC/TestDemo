<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/fir_button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ScrollView Up" />

        <Button
            android:id="@+id/fir_button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ScrollView Down" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/fir_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List(BaseApapter/SimpleAdapter)" />

            <Button
                android:id="@+id/fir_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Picker(Normal/Dialog)" />

            <Button
                android:id="@+id/fir_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GridView" />

            <Button
                android:id="@+id/fir_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spinner" />

            <Button
                android:id="@+id/fir_button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ProgressBar" />
            
            <Button
                android:id="@+id/fir_button9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SeekBar" />

            <Button
                android:id="@+id/fir_button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WebView" />
            <Button
                android:id="@+id/fir_button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C/C++测试" />
            <Button
                android:id="@+id/fir_button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application共享数据" />
            <Button
                android:id="@+id/fir_button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="权限检查/给应用添加权限" />
            <Button
                android:id="@+id/fir_button13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Bugly Crash" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>